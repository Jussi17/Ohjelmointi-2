<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="t16.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:t16"
    Shell.FlyoutBehavior="Disabled"
    Title="t16">

    <Shell.TitleView>
        <Grid BackgroundColor="#0000B7" Padding="30,0">
            <Label Text="Päivämäärän tarkistaja" TextColor="White" FontAttributes="Bold" VerticalOptions="Center" FontSize="28" />
        </Grid>
    </Shell.TitleView>


    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

</Shell>
